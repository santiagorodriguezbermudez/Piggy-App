<%= javascript_include_tag 'show_image' %>
<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> The following errors were detected before creating a project:</h2>

      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Enter Project Details</h3>

  <div id="image" class="d-none">
    <br>
    <img id="img-upload" alt="preview" class="w-50 d-block mx-auto rounded-circle">
    <br>
  </div>

  <div class="form-group">
    <div class="custom-file ">
      <%= form.file_field :image, class: 'custom-file-input',onChange: 'preview_picture()' %>
      <%= form.label :image, "Upload picture", class: 'custom-file-label' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, 'Name:', class: 'my-3' %>
    <%= form.text_field :name, class: 'border-0 shadow p-5 w-100', placeholder: 'Type the name of the project' %>
  </div>

  <div class="form-group">
    <%= form.label :goal, 'Goal of the Project:', class: 'my-3' %>
    <%= form.number_field :goal, class: 'border-0 shadow p-5 w-100' %>
  </div>

  <div>
    <%= form.submit class:"my-3 btn-large btn-primary w-100 p-3"%>
  </div>
<% end %>



