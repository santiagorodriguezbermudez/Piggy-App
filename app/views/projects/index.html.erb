
<section>
  <h1>Your Projects</h1>
  <% if @user_projects.empty? %>
    <p>You currently don't have any project of your own</p> 
  <% else %>
    <div>
        <div class='w-100 d-flex flex-row shadow rounded justify-content-between my-3'>
        <% @user_projects.each do |project| %>
          <div class="image-group">
          
          </div>
          <div class="d-flex flex-column justiy-content-between">
            <p class="project_name"><%= project[0] %></p>
            <p class="project_date"><%= project[2] %></p>
          </div>
          <div class="amount">
            <%= number_to_currency(project[1]) %>
          </div>
        <% end %>
      </div>
  <% end %>
  <h1>Other Projects</h1>
  <% if @other_projects.empty? %>
    <p>There are no more projects</p> 
  <% else %>
    <div>
        <div class='w-100 d-flex flex-row shadow rounded justify-content-between my-3'>
        <% @other_projects.each do |project| %>
          <div class="image-group">
          
          </div>
          <div class="d-flex flex-column justiy-content-between">
            <p class="project_name"><%= project[0] %></p>
            <p class="project_date"><%= project[2] %></p>
          </div>
          <div class="amount">
            <%= number_to_currency(project[1]) %>
          </div>
        <% end %>
      </div>
  <% end %>
</section>

<%= link_to "Add a project", new_project_path, class:'btn btn-success w-100 px-3 py-4 m-4'%>