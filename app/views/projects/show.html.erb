<section class = 'w-100 p-3'>
  <h3>Goal: <span><%= number_to_currency(@project.goal, precision: 0) %></span></h3>
</section>

<section class = 'w-100 p-3'>
  <h3>Total $$ Saved: <span><%= number_to_currency(project_savings_amount_sum(@project), precision: 0) %></span></h3>
  <h3>Percentage Completed: <span><%= number_to_percentage(percentage_completed(@project), precision: 0) %></span></h3>
</section>

<section class='list_savings p-3'>
  <% unless @savings.empty? %>
    <% @savings.each do |saving| %>
      <div class='w-100 d-flex flex-row shadow rounded justify-content-between my-3'>
        <div class="image-group">
          
        </div>
        <div class="d-flex flex-column justiy-content-between">
          <p class="saving_name"><%= saving[0] %></p>
          <p class="saving_date"><%= saving[2] %></p>
          <p class="saving_author">Contribute by: <%= saving[3] %></p>
        </div>
        <div class="amount">
          <%= number_to_currency(saving[1]) %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No savings have been done</p>
    <%= link_to "Add a saving to a project", savings_no_project_path, class:'btn btn-success w-75 py-3 my-5 mr-auto'%>
  <% end %>
</section>

<%= link_to "Contribute to this project", new_saving_path, class:'btn btn-success w-100 px-3 py-4 m-4'%>
<%= link_to "All projects", projects_path, class:'btn btn-success w-100 px-3 py-4 m-4'%>