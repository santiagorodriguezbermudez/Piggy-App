<%= form_with(model: saving, local: true) do |form| %>
  <% if saving.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(saving.errors.count, "error") %> Couldn't register the savings:</h2>

      <ul>
        <% saving.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Enter Saving Details</h3>


  <div class="field">
    <%= form.label :project_id, 'Select the project to which you wish to contribute (optional)' %>
    <% projects_name = get_project_name %>
    <% unless projects_name %>
      <%= link_to 'Add the first Project', root_path %>  
    <% else %>
      <%= form.select :project_id, projects_name, prompt: 'Select a project' %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :name, 'Name of your contribution:', class: 'my-3' %>
    <%= form.text_field :name, class: 'form-control border-0 shadow p-5 w-100' %>
  </div>

  <div class="form-group">
    <%= form.label :amount, 'Amount of your contribution:', class: 'my-3' %>
    <%= form.number_field :amount, class: 'form-control border-0 shadow p-5 w-100' %>
  </div>

  <div>
    <%= form.submit class:"my-3 btn-large btn-primary w-100 p-3"%>
  </div>
<% end %>