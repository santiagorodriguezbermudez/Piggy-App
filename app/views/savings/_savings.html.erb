<div class = 'bg-white p-5'>
  <h3>Total: <%= number_to_currency(@total_savings, precision: 0) %></h3>
</div>

<div class='d-flex flex-column justify-content-around my-3'>
  <%= message_if_no_projects(@savings) %>
  <% @savings.each do |saving| %>
    <div class='d-flex justify-content-between my-3 bg-white rounded p-5 shadow'>
      <%= render_saving_img(saving) %>
      <div class="d-flex flex-column justify-content-between align-items-start p-3">
        <p><%= saving[:name] %></p>
        <p><%= saving[:date] %></p>
      </div>
      <div class="d-flex flex-column justify-content-between align-items-start p-3">
        <%= number_to_currency(saving[:amount], precision: 0) %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Add a saving", new_saving_path, class:'btn btn-success w-100 px-3 py-4 my-3'%>