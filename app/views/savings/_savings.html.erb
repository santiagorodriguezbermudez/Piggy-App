<div class = 'bg-white p-5'>
  <h3>Total amount of savings: <%= number_to_currency(@total_savings) %></h3>
</vid>

<div class='d-flex flex-column justify-content-around my-3'>
  <% unless @savings.empty? %>
    <% @savings.each do |saving| %>
      <div class='d-flex justify-content-between my-3'>
        <div class="image-group">
          
        </div>
        <div class="d-flex flex-column justiy-content-between align-items-start">
          <p><%= saving[:name] %></p>
          <p><%= saving[:date] %></p>
        </div>
        <div class="amount">
          <%= number_to_currency(saving[:amount]) %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No savings registered</p>
  <% end %>
</div>

<%= link_to "Add a saving", new_saving_path, class:'btn btn-success w-100 px-3 py-4 m-4'%>