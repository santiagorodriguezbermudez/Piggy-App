<section class = 'shadow w-100'>
  <h3>Total amount of savings: <span><%= @total_savings %></span></h3>
</section>

<section class='list_savings'>
  <% @savings.each do |saving| %>
    <div class='w-100 d-flex flex-row shadow rounded justify-content-between my-3'>
      <div class="image-group">
        <%= image_tag saving.image, class:"w-75 d-block mx-auto rounded-circle p-3"%>
      </div>
      <div class="d-flex flex-column justiy-content-between">
        <p class="saving_name"><%= saving.name %></p>
        <p class="saving_date"><%= saving.date %></p>
      </div>
      <div class="amount">
        <%= saving.amount %>
      </div>
    </div>
  <% end %>
</section>

<%= button_to "Add a saving", new_saving_path, class:'btn btn-success w-100 p-3 m-5'%>